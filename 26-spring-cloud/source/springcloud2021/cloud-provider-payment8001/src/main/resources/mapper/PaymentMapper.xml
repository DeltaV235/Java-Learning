<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.deltav.cloudproviderpayment8001.dao.PaymentDao">
    <insert id="add" parameterType="com.deltav.cloudproviderpayment8001.entities.Payment" useGeneratedKeys="true"
            keyColumn="id">
        insert into payment(serial)
        values (#{serial})
    </insert>

    <resultMap id="paymentMap" type="com.deltav.cloudproviderpayment8001.entities.Payment">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="serial" property="serial" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="queryById" parameterType="Long" resultMap="paymentMap">
        select *
        from payment
        where id = #{id}
    </select>
</mapper>